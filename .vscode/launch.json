{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Validator (Bun)",
      "runtimeExecutable": "bun",
      "runtimeArgs": ["run", "--inspect-brk", "validator/index.ts"],
      "env": {
        "DEBUG_ON_SET_WEIGHTS": "true",
        "LOG": "true"
      },
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "outputCapture": "std"
    }
  ]
} 